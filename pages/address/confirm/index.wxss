.address-list {
	padding-bottom: 46px;	
}

.address-list .weui-media-box {
	padding-left: 35px;
	padding-right: 35px;
}

.address-list .edit {
	position: absolute;
	top: 50%;
	right: 15px;
	width: 20px; 
    height: 20px;
    -webkit-transform: translate3d(0, -50%, 0);
    transform: translate3d(0, -50%, 0);
}

.address-list .edit .icon {
    width:20px; 
    height: 20px;
}

.address-list .radio {
	position: absolute;
	top: 50%;
	left: 15px;
	width: 20px; 
    height: 20px;
    -webkit-transform: translate3d(0, -50%, 0);
    transform: translate3d(0, -50%, 0);
}