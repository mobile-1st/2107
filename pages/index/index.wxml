<import src="../common/hot-house-list.wxml"/>
<import src="../common/hot-message-list.wxml"/>

<view class="page">
    <view  bindtap="bindViewTap" class="main-func">
        <view class="weui-grids non-border">
            <block wx:for-items="{{grids}}" wx:key="{{index}}">
                <navigator url="" class="weui-grid non-border item">
                    <image class="weui-grid__icon item-avatar" src="../../assets/images/home/{{item.imageName}}" />
                    <view class="weui-grid__label item-text">{{item.text}}</view>
                </navigator>
            </block>
        </view>
    </view>


    <view class="page__bd">
        <template is="hot-house-list" data="{{ hotHouse }}"/>
        <template is="hot-message-list" data="{{ hotMessage }}"/>
    </view>
</view>